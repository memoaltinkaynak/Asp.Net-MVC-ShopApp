@model CategoryListViewModel

<div class="row">
    <div class="col-md-12">
        <h1>Admin Categories</h1>
        <hr>
        <a href="/admin/categorycreate" class="btn btn-primary btn-sm mr2">Add Category</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <td style="width: 30px;">Id</td>
                    <td style="width: 20px;">Name</td>
                    <td style="width: 30px;">Url</td>
                    <td style="width: 150px;"></td>
                </tr>
            </thead>
            <tbody>
                @if (Model.Categories.Count > 0)
                {
                    @foreach (var item in Model.Categories)
                    {
                        <tr>
                            <td>@item.CategoryId</td>
                            <td>@item.Name</td>
                            <td>@item.Url</td>

                            <td>
                                <a href="/admin/categories/@item.CategoryId" class="btn btn-primary btn-sm mr2">Edit</a>

                                <form action="/admin/DeleteCategory" method="post" style="display:inline;">
                                    <input type="hidden" name="categoryId" value="@item.CategoryId">
                                    <button type="submit" class="btn btn-danger btn-sm text-white">Delete</button>
                                </form>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <div class="alert alert-danger">
                        <h3>No Categories</h3>
                    </div>
                }


            </tbody>
        </table>
    </div>
</div>